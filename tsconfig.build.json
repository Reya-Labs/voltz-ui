{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "rootDir": "src",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@theme": ["src/theme"],
      "@components/*": ["src/components"],
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./build",
    "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/graphql/generated.ts",
    "**/__tests__/*.spec.ts",
    "**/*.stories.tsx"
  ]
}
